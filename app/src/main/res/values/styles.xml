<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="remoteStand_Form">
        <item name="android:padding">4dp</item>
        <item name="background">@drawable/white_background</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:textColor">@color/rs_black</item>
        <item name="android:textColorHint">@color/rs_lightgray</item>
    </style>

    <style name="ImageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:minHeight">30sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxHeight">60sp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">.5</item>
    </style>

</resources>
